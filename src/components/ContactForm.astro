---
interface Props {
  email: string;
}

const { email } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg p-8 max-w-md mx-auto scroll-reveal">
  <form class="space-y-8" action="/api/contact" method="POST">
    <div class="space-y-4">
      <label for="name" class="block text-sm font-medium text-gray-700">Nombre</label>
      <div class="relative">
        <i class="fas fa-user absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        <input type="text" name="name" id="name" required
          class="pl-10 mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-300 hover:border-indigo-500" />
      </div>
    </div>

    <div class="space-y-4">
      <label for="email" class="block text-sm font-medium text-gray-700">Correo Electr√≥nico</label>
      <div class="relative">
        <i class="fas fa-envelope absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400"></i>
        <input type="email" name="email" id="email" required
          class="pl-10 mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-300 hover:border-indigo-500" />
      </div>
    </div>

    <div class="space-y-4">
      <label for="message" class="block text-sm font-medium text-gray-700">Mensaje</label>
      <div class="relative">
        <i class="fas fa-pencil-alt absolute left-3 top-4 text-gray-400"></i>
        <textarea name="message" id="message" rows="4" required
          class="pl-10 mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 transition-all duration-300 hover:border-indigo-500"></textarea>
      </div>
    </div>

    <div class="flex justify-center">
      <button type="submit" 
        class="button-hover w-full max-w-sm flex justify-center py-3 px-6 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-gradient-to-r from-indigo-600 to-indigo-700 hover:from-indigo-700 hover:to-indigo-800 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
        <i class="fas fa-paper-plane mr-2"></i>
        Enviar mensaje
      </button>
    </div>
  </form>
</div>
