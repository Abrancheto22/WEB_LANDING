---
import '../styles/global.css';
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
      <h1 class="text-2xl font-semibold text-center text-gray-800 mb-6">Registro de Usuario</h1>
      <form id="registerForm" class="space-y-4">
        <input type="text" id="username" placeholder="Usuario" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
          <input type="text" id="correo_electronico" placeholder="Correo" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />
        <input type="password" id="password" placeholder="Contraseña" required
          class="w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500" />

        <label class="block text-gray-700">
          Rol:
          <select id="roles" required
            class="mt-1 w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
            <option value="">Selecciona un rol</option>
            <option value="1">Asesor</option>
            <option value="2">Docente</option>
            <option value="3">Administrador</option>
          </select>
        </label>

        <button type="submit"
          class="w-full bg-green-600 text-white py-3 rounded-lg hover:bg-green-700 transition-all">Registrar</button>

        <p class="text-center text-sm text-gray-600">¿Ya tienes cuenta?
          <a href="/login" class="text-indigo-600 hover:underline">Inicia sesión aquí</a>
        </p>
      </form>

      <p id="msg" class="text-green-600 text-center mt-4"></p>
      <p id="error" class="text-red-600 text-center mt-2"></p>
    </div>
  </div>
  <script type="module">
    document.getElementById('registerForm').addEventListener('submit', async function (e) {
      e.preventDefault();
  
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;
      const roleValue = document.getElementById('roles').value;
      const correo_electronico = document.getElementById('correo_electronico').value;
  
      const roles = {
        "1": "Asesor",
        "2": "Docente",
        "3": "Administrador"
      }[roleValue];
  
      if (!roles) {
        document.getElementById('error').textContent = 'Selecciona un rol válido';
        return;
      }
  
      try {
        const res = await fetch('http://localhost:8080/api/auth/register', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ username, password, correo_electronico, roles })
        });
  
        if (!res.ok) throw new Error('Error al registrar usuario');
  
        document.getElementById('msg').textContent = 'Usuario registrado correctamente';
        document.getElementById('error').textContent = '';
  
        // Redirigir a la página de login
        window.location.href = '/login';
        
      } catch (error) {
        document.getElementById('error').textContent = error.message;
        document.getElementById('msg').textContent = '';
      }
    });
  </script>
  
</Layout>
